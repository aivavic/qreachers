{
    "type": "object",
    "title": "Case video",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___case-video___"
            }
        },
        "___case-video___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Case video"
        },
        "case-video-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/case-video/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "video": {
            "type": "string",
            "title": "Video",
            "default": "Case video ..."
        },
        "img_src": {
            "type": "string",
            "format": "url",
            "title": "Some image.",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        }

    }

}