{
    "type": "object",
    "title": "Post text simple",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___post-text-simple___"
            }
        },
        "___post-text-simple___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Post text"
        },
        "post-text-simple-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/post-text-simple/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "text": {
            "type": "string",
            "format": "html",
            "options": {
                "wysiwyg": true
            },
            "title": "Text.",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing."
        }
    }
}