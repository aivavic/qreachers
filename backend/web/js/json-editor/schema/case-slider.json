{
    "type": "object",
    "title": "Case slider",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___case-slider___"
            }
        },
        "___case-slider___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Case slider"
        },
        "case-slider-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/case-slider/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "items": {
            "type": "array",
            "title": "Some works.",
            "options": {
                "collapsed": true
            },
            "items": {
                "type": "object",
                "title": "work",
                "options": {
                    "collapsed": true
                },
                "properties": {
                    "img_src": {
                        "type": "string",
                        "format": "url",
                        "title": "Some image.",
                        "options": {
                            "upload": true
                        },
                        "links": [
                            {
                                "href": "{{self}}",
                                "rel": "View file"
                            }
                        ]
                    }
                }
            }
        }

    }

}