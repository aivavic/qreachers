{
    "type": "object",
    "title": "Case head box",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___case-head-box___"
            }
        },
        "___case-head-box___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Case head box"
        },
        "case-head-box-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/case-head-box/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "title_button": {
            "type": "string",
            "title": "Title button.",
            "default": "Title button."
        },
        "next": {
            "type": "string",
            "title": "next text.",
            "default": "След."
        },
        "prev": {
            "type": "string",
            "title": "prev text.",
            "default": "Прев."
        },
        "background_image": {
            "type": "string",
            "format": "url",
            "title": "Background image.",
            "default": "/img/bg-case_top.jpg",
            "options": {
                "upload": true
            },
            "links": [
                {
                    "href": "{{self}}",
                    "rel": "View file"
                }
            ]
        }
    }
}