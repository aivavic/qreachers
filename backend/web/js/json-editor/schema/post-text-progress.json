{
    "type": "object",
    "title": "Post text progress",
    "properties": {
        "tab_title": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "template": "{{title}}",
            "watch": {
                "title": "widget.___post-text-progress___"
            }
        },
        "___post-text-progress___": {
            "type": "string",
            "options": {
                "hidden": true
            },
            "default": "Post text progress"
        },
        "post-text-progress-preview": {
            "title": "Example:",
            "type": "string",
            "format": "hidden",
            "default": "/frontend/web/js/app/widgets/post-text-progress/img/preview.jpg",
            "links": [
                {
                    "href": "{{self}}",
                    "mediaType": "image"
                }
            ]

        },
        "progress": {
            "type": "string",
            "title": "Progress.",
            "default": "93%"
        },
        "progress_text": {
            "type": "string",
            "format": "html",
            "options": {
                "wysiwyg": true
            },
            "title": "Text.",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing."
        },
        "title": {
            "type": "string",
            "title": "title",
            "default": "title..."
        },
        "text": {
            "type": "string",
            "format": "html",
            "options": {
                "wysiwyg": true
            },
            "title": "Text.",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing."
        }
    }

}